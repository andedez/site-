                <p class="card-text">
                    Um jogo simples de adivinhar números:
                </p>
                <pre><code>public class JogoAdivinhacao
{
    private Random random = new Random();
    private int numeroSecreto;
    private int tentativas;

    public void IniciarJogo()
    {
        numeroSecreto = random.Next(1, 101);
        tentativas = 0;
    }

    public string TentarAdivinhar(int palpite)
    {
        tentativas++;
        
        if (palpite < numeroSecreto)
            return "Tente um número maior!";
        else if (palpite > numeroSecreto)
            return "Tente um número menor!";
        else
            return $"Parabéns! Você acertou em {tentativas} tentativas!";
    }
}</code></pre>
